<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#142433"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <EditText
        android:id="@+id/menu"
        android:layout_width="157dp"
        android:layout_height="32dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/box_taotindang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtLopHoc" />

    <EditText
        android:id="@+id/menu1"
        android:layout_width="157dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"

        android:background="@drawable/box_taotindang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.697"
        app:layout_constraintStart_toEndOf="@+id/menu"
        app:layout_constraintTop_toBottomOf="@+id/txtMonHoc" />

    <TextView
        android:id="@+id/txtMonHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="MÔN HỌC"
        android:textColor="#707070"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLopHoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LỚP HỌC"
        android:layout_marginTop="20dp"
        android:textColor="#707070"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_buoihoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="SỐ BUỔI HỌC / TUẤN"
        android:textColor="#707070"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menu" />
    <Button
        android:id="@+id/button2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_circle"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_buoihoc" />

    <Button
        android:id="@+id/button7"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_circle"
        android:text="2"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/txt_buoihoc" />

    <Button
        android:id="@+id/button8"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_circle"
        android:text="3"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/txt_buoihoc" />

    <Button
        android:id="@+id/button10"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_circle"
        android:text="4"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/txt_buoihoc" />

    <Button
        android:id="@+id/button11"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_circle"
        android:text="5"
        app:layout_constraintStart_toEndOf="@+id/button10"
        app:layout_constraintTop_toBottomOf="@+id/txt_buoihoc" />

    <Button
        android:id="@+id/button12"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_circle"
        android:text="6"
        app:layout_constraintStart_toEndOf="@+id/button11"
        app:layout_constraintTop_toBottomOf="@+id/txt_buoihoc" />

    <Button
        android:id="@+id/button9"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/btn_circle"
        android:text="7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button12"
        app:layout_constraintTop_toBottomOf="@+id/txt_buoihoc" />

    <TextView
        android:id="@+id/txt_gio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="SỐ  GIỜ/BUỔI"
        android:textColor="#707070"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button13"
        android:layout_width="64dp"
        android:background="@drawable/box_taotindang"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/white"
        android:text="1 giờ"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_gio" />

    <Button
        android:id="@+id/button"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/box_taotindang"
        android:backgroundTint="@color/white"
        android:text="1.5 giờ"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@+id/button13"
        app:layout_constraintTop_toBottomOf="@+id/txt_gio" />

    <Button
        android:id="@+id/button3"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/white"
        android:text="2 giờ"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:background="@drawable/box_taotindang"
        app:layout_constraintStart_toEndOf="@+id/button"
        app:layout_constraintTop_toBottomOf="@+id/txt_gio" />

    <Button
        android:id="@+id/button4"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/white"
        android:text="2.5 giờ"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:background="@drawable/box_taotindang"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/txt_gio" />

    <Button
        android:id="@+id/button5"
        android:layout_width="64dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="@color/white"
        android:text="> 3 giờ"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:background="@drawable/box_taotindang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/button4"
        app:layout_constraintTop_toBottomOf="@+id/txt_gio" />

    <TextView
        android:id="@+id/txt_gioitinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="GIỚI TÍNH GIA SƯ"
        android:textColor="#707070"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.087"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button13" />

    <Button
        android:id="@+id/button6"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:text="Nam"
        android:background="@drawable/box_taotindang"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_gioitinh" />

    <Button
        android:id="@+id/button15"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginStart="18dp"
        android:backgroundTint="@color/white"
        android:text="Nữ"
        android:background="@drawable/box_taotindang"
        android:textSize="8sp"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toTopOf="@+id/button6" />

    <Button
        android:id="@+id/button14"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:text="Khác"
        android:background="@drawable/box_taotindang"
        android:textColor="@color/black"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toEndOf="@+id/button15"
        app:layout_constraintTop_toBottomOf="@+id/txt_gioitinh" />

    <TextView
        android:id="@+id/txt_doituong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="ĐỐI TƯỢNG GIA SƯ"
        android:textColor="#707070"
        android:textStyle="bold"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button6" />

    <Button
        android:id="@+id/btn_sinhvien"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:text="Sinh viên"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:background="@drawable/box_taotindang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_doituong" />

    <Button
        android:id="@+id/btn_GV"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:text="Giáo viên"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:background="@drawable/box_taotindang"
        app:layout_constraintStart_toEndOf="@+id/btn_sinhvien"
        app:layout_constraintTop_toBottomOf="@+id/txt_doituong" />

    <Button
        android:id="@+id/btn_Gstudo"
        android:layout_width="100dp"
        android:layout_height="47dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:text="Gia sư tự do"
        android:textColor="@color/black"
        android:textSize="8sp"
        android:background="@drawable/box_taotindang"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.147"
        app:layout_constraintStart_toEndOf="@+id/btn_GV"
        app:layout_constraintTop_toBottomOf="@+id/txt_doituong" />

    <TextView
        android:id="@+id/txt_htday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="HÌNH THỨC HỌC"
        android:textColor="#707070"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sinhvien" />

    <Button
        android:id="@+id/button16"
        android:layout_width="160dp"
        android:layout_height="47dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
